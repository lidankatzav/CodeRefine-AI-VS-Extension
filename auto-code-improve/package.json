{
  "name": "coderefine-ai",
  "displayName": "CodeRefine",
  "description": "AI-powered code review and optimization tool that runs entirely on your local machine. Get instant suggestions for code improvements, refactoring, and best practices without sending your code to external servers.",
  "version": "0.0.1",
  "publisher": "lidan",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:auto-code-improve.suggestImprovements",
    "onLanguage:python",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "auto-code-improve.suggestImprovements",
        "title": "CodeRefine: Analyze Code",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "auto-code-improve.suggestImprovements",
          "group": "navigation",
          "when": "editorLangId =~ /(python|typescript|javascript)/"
        }
      ],
      "editor/title": [
        {
          "command": "auto-code-improve.suggestImprovements",
          "group": "navigation@9",
          "when": "editorLangId =~ /(python|typescript|javascript)/"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.106.1",
    "typescript": "^5.2.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
